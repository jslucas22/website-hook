{
    "manifest_version": 3,
    "name": "`Webiste Conector`",
    "version": "1.0",
    "description": "Webiste facilitator.",
    "permissions": [
        "tabs",
        "activeTab",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "site.html"
    }
}